// The following environment variables are defined in the Jenkins global config:
//  * AUNITER_ARDUINO_BINARY
//  * BOARD_PORT
//
// The following are provided by Jenkins itself:
//  * WORKSPACE
//
pipeline {
    agent { label 'master' }
    stages {
        stage('Setup') {
            steps {
                dir('AUniter') {
                    git url: 'https://github.com/bxparks/AUniter',
                        branch: 'develop'
                }
                dir('libraries/AUnit') {
                    git url: 'https://github.com/bxparks/AUnit',
                        branch: 'develop'
                }
            }
        }
        stage('Verify Examples') {
            steps {
                sh "AUniter/auniter.sh --verify \
                    --pref sketchbook.path=$WORKSPACE \
                    --config libraries/AceButton/tests/auniter.conf \
                    --boards nano \
                    libraries/AceButton/examples/*"
            }
        }
        stage('Verify Tests') {
            steps {
                sh "AUniter/auniter.sh --verify \
                    --pref sketchbook.path=$WORKSPACE \
                    --config libraries/AceButton/tests/auniter.conf \
                    --boards nano \
                    libraries/AceButton/tests/AceButtonTest"
            }
        }
        stage('Test') {
            steps {
                sh "AUniter/auniter.sh --test \
                    --pref sketchbook.path=$WORKSPACE \
                    --config libraries/AceButton/tests/auniter.conf \
                    --boards nano:$BOARD_PORT \
                    libraries/AceButton/tests/AceButtonTest"
            }
        }
    }
}
